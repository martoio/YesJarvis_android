<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/bed_icon_light_green"
        />

    <TextView
        android:id="@+id/drawer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/drawer_item_icon"
        android:layout_toEndOf="@+id/drawer_item_icon"
        android:text="Line 1"
        />
    <TextView android:id="@+id/drawer_item_subTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Line 2"
              android:layout_toRightOf="@+id/drawer_item_icon"
              android:layout_below="@+id/drawer_item_title"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true" />
</RelativeLayout>